---
import { Image } from 'astro:assets';
import LeftBg from '@/components/assets/left-bg-footer.png';
import RightBg from '@/components/assets/rightm-bg-footer.png';
import BrandLogo from '@/components/assets/branddark.svg'

const quickLinks = [
  { text: "Home", href: "/" },
  { text: "Shop", href: "/shop" },
  { text: "Resources", href: "/blog" },
  { text: "Contact", href: "/contact" },
];

const socials = [
  { name: "YouTube", href: "#", icon: "play" },
  { name: "Instagram", href: "#", icon: "instagram" },
  { name: "LinkedIn", href: "#", icon: "linkedin" },
  { name: "X / Twitter", href: "#", icon: "x" },
];
---

<footer class="relative bg-[#FFD100] pt-20 pb-10 px-6 overflow-hidden text-black">
  <div class="absolute bottom-0 left-0 w-48 md:w-64 opacity-50 pointer-events-none">
    <Image src={LeftBg} alt="" class="w-full h-auto object-contain object-left-bottom"/>
  </div>
  <div class="absolute top-0 right-0 w-48 md:w-64 opacity-50 pointer-events-none">
    <Image src={RightBg} alt="" class="w-full h-auto object-contain object-right-top"/>
  </div>

  <div class="max-w-containerBrand m-auto relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8 mb-16">
      
      <div class="flex flex-col gap-6">
        <BrandLogo/>
        <p class="rs-footer-text font-medium leading-relaxed">
          Join our upcoming paid newsletter where we share deeper insights, exclusive tips, and stories you won't find anywhere else.
        </p>
        <form class="flex flex-col sm:flex-row gap-2 mt-2">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="bg-transparent border border-black/20 rounded-full py-3 px-6 placeholder:text-black/60 focus:outline-none focus:border-black flex-grow text-sm"
          />
          <button class="bg-black text-white px-8 py-3 rounded-full font-semibold hover:bg-gray-800 transition-colors duration-300 text-sm whitespace-nowrap">
            Join Waitlist
          </button>
        </form>
      </div>

      <div class="flex flex-col gap-6 lg:pl-10">
        <h3 class="font-bold uppercase tracking-wider text-sm">Quick Links</h3>
        <ul class="flex flex-col gap-4">
          {quickLinks.map((link) => (
            <li><a href={link.href} class="hover:underline opacity-80 hover:opacity-100 transition-all">{link.text}</a></li>
          ))}
        </ul>
      </div>

      <div class="flex flex-col gap-6 lg:pl-10">
        <h3 class="font-bold uppercase tracking-wider text-sm">Connect With Us</h3>
        <ul class="flex flex-col gap-4">
          {socials.map((social) => (
            <li>
              <a href={social.href} class="flex items-center gap-3 hover:opacity-70 transition-all">
                <span class="w-5 h-5 flex items-center justify-center">
                  {social.icon === 'play' && <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>}
                  {social.icon === 'instagram' && <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>}
                  {social.icon === 'linkedin' && <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6zM2 9h4v12H2z"/><circle cx="4" cy="4" r="2"/></svg>}
                  {social.icon === 'x' && <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>}
                </span>
                {social.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="flex flex-col gap-6 lg:pl-10">
        <h3 class="font-bold uppercase tracking-wider text-sm">Contact Info</h3>
        <div class="flex flex-col gap-4">
          <a href="mailto:hello@themoneywit.africa" class="flex items-center gap-3 hover:opacity-70 transition-all">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
            <span class="text-sm font-medium">hello@themoneywit.africa</span>
          </a>
          <a href="tel:02013309372" class="flex items-center gap-3 hover:opacity-70 transition-all">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            <span class="text-sm font-medium">02013309372</span>
          </a>
        </div>
      </div>
    </div>

    <hr class="border-t border-black/10 mb-8" />

    <div class="flex flex-col md:flex-row justify-between items-center gap-6 text-sm font-medium">
      <p>Â© 2025 All rights reserved.</p>
      <div class="flex flex-wrap justify-center gap-6">
        <a href="#" class="hover:underline">Privacy Policy</a>
        <a href="#" class="hover:underline">Terms of Service</a>
        <a href="#" class="hover:underline">Cookies Settings</a>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  @use '@/styles/fn.scss' as fn;
  .rs-footer-text {
    font-size: fn.useResponsiveSize(320, 1024, 14, 15);
  }
  .max-w-containerBrand {
    max-width: 1200px;
  }
</style>
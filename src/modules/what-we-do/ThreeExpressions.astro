---
import { Image } from 'astro:assets';
import expressionOne from './assets/expressionOne.webp';
import expressionTwo from './assets/expressionTwo.webp';
import expressionThree from './assets/expressionThree.webp';

const expressions = [
  {
    title: "Media",
    description: "Simplifying finance through stories, explainers, and actionable tips",
    image: expressionOne,
    alt: "Young woman recording a podcast"
  },
  {
    title: "School",
    description: "Hands-on courses and workshops that teach practical money skills.",
    image: expressionTwo,
    alt: "Teacher presenting to a classroom"
  },
  {
    title: "Community",
    description: "Small groups, peer-learning, and events to practice what you learn.",
    image: expressionThree,
    alt: "Group of friends laughing and talking"
  }
];
---

<section class="bg-[#F9F9F9] py-20 px-6">
  <div class="max-w-containerBrand m-auto">
    <h2 class="text-center font-bold text-[#222] rs-section-title mb-12">
      Our Three Expressions
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {expressions.map((item) => (
        <div class="relative group overflow-hidden rounded-4xl aspect-4/5 shadow-sm hover:shadow-xl transition-shadow duration-500">
          
          <div class="absolute inset-0 w-full h-full">
            <Image 
              src={item.image}  
              alt={item.alt} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
          </div>

          <div class="absolute inset-0 bg-linear-to-t from-black/90 via-black/20 to-transparent flex flex-col justify-end p-8">
            
            <div class="flex items-end justify-between gap-4">
              <div class="space-y-2">
                <h3 class="text-white font-bold rs-card-title leading-none">
                  {item.title}
                </h3>
                <p class="text-gray-200 rs-card-body max-w-60">
                  {item.description}
                </p>
              </div>

              <button class="bg-[#FFD700] hover:bg-[#FFE44D] text-black w-12 h-12 flex items-center justify-center rounded-full shrink-0 transition-transform hover:scale-110 active:scale-95">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14m-7-7 7 7-7 7"/>
                </svg>
              </button>
            </div>

          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style lang="scss">
  @use '@/styles/fn.scss' as fn;

  .rs-section-title {
    font-size: fn.useResponsiveSize(320, 1024, 32, 48);
    font-family: var(--font-family);
  }

  .rs-card-title {
    font-size: fn.useResponsiveSize(320, 1024, 24, 32);
    font-family: var(--font-family);
  }

  .rs-card-body {
    font-size: fn.useResponsiveSize(320, 1024, 14, 16);
    line-height: 1.4;
  }
</style>
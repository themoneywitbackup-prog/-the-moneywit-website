---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';
interface Props {
	title: string;
	description: string;
	image: ImageMetadata;
}
const { description, image, title } = Astro.props;
---

<article class='moneywit-card'>
	<header>
		<h2>{title}</h2>
		<p>{description}</p>
	</header>
	<Picture
		src={image}
		alt={''}
		layout='full-width'
		formats={['avif', 'webp']}
	/>
</article>

<style lang='scss'>
	@use '@/styles/fn.scss' as fn;
	.moneywit-card {
		background-color: #fff;
		border-radius: 1.25rem;
		overflow: clip;

		header {
			padding: max(0.875rem, min(2rem, 5cqw));
			h2 {
				font-weight: 600;
				font-size: fn.useResponsiveSize(420, 790, 20, 32);
			}
			p {
				color: #707070;
				font-size: fn.useResponsiveSize(420, 790, 16, 20);
			}
		}
		picture,
		img {
			width: 100%;
		}
	}
</style>
